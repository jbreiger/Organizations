<h1> Hi @ViewBag.first_name </h1>


<p> Here are the organizations that you may join </p>

@foreach(var group in @ViewBag.all_groups){
 
   
     <p> <a href= "groups/@group.id">  @group.name  </a> </p>
    <p> Members 99 @group.id </p>
    <p> @group.description </p>
     @if(@group.user_id == @ViewBag.user_id){
      <form action ="leave_group/@group.id" method = "POST">
        <button type ="submit"> Leave Group </button>
      </form>
      <form action ="/delete/@group.id" method = "POST">
        <button type = "submit"> Delete this group </button>
      </form>
   }
    
    <hr>
}

<form action = "/groups"  method = "POST">
   Group Name <input type = "text" name= "name">
  Description  <input type = "text" name = "description">
    <button type="submit"> Make Group </submit>
</form>    

